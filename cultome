#!/usr/bin/env jruby

system("clear")

$LOAD_PATH << './lib'

begin
	require 'persistence'
	Song.first
rescue Exception => e
	print "Running for the first time. Preparing environment..."

	require 'rake'

	def capture_stdout
		s = StringIO.new
		oldstd = $stdout
		$stdout = s
		yield
		s.string
	ensure
		$stdout = oldstd
	end

	Rake.application.init
	Rake.application.load_rakefile
	capture_stdout{Rake.application[:up].invoke}
	#capture_stdout{Rake.application[:down].invoke}
end

puts "Iniciando!" # aqui poner una frase humorisitca aleatoria

require 'helper'
require 'java'
require 'cultome'

include Helper

require_jars

java_import 'Player'

# iniciamos el reproductor
CultomePlayer.new.start

puts "Bye!" # aqui poner una frase humorisitca aleatoria
